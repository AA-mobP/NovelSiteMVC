@model CreateBlogViewModel

@{
    ViewData["Title"] = "إنشاء مدونة";
}
<div class="container">
    <h1>أضافة مدونة جديدة</h1>

    <div>
        <h4>معلومات المدونة</h4>
        <hr />
        <form asp-area="" asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <dl class="row">
                <dt class="col-sm-2">
                    الاسم
                </dt>
                <dd class="col-sm-10">
                    <input class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </dd>
            </dl>
            <input type="submit" value="إضافة" class="btn btn-info m-2" />
        </form>
    </div>
    <div>
        <a class="btn btn-info m-2" asp-action="Index">عودة للمدونات</a>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
